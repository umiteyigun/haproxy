# HAProxy Docker Environment Variables

# Certbot Configuration
CERTBOT_EMAIL=admin@example.com
CERTBOT_STAGING=false
DNS_PROPAGATION_SECONDS=60
CERTBOT_TIMEOUT=600

# API Configuration
NODE_ENV=production
JWT_SECRET=change_this_secret_to_something_secure
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin12345

# Database Configuration
POSTGRES_DB=haproxy
POSTGRES_USER=haproxy
POSTGRES_PASSWORD=haproxy_password_change_me

# HAProxy Configuration
HAPROXY_STATS_USER=admin
HAPROXY_STATS_PASSWORD=admin

# SSL Configuration
SSL_RENEWAL_DAYS=30
SSL_KEY_SIZE=4096
SSL_MUST_STAPLE=true

# DNS Provider Specific (uncomment as needed)
# CLOUDFLARE_API_TOKEN=your_cloudflare_token
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# DIGITALOCEAN_TOKEN=your_do_token
# GODADDY_API_KEY=your_godaddy_key
# GODADDY_API_SECRET=your_godaddy_secret
# HE_NET_API_KEY=your_he_net_key
